{
    "name": "Drupal 7 with composer",
    "authors": [
        {
            "name": "The Hangar - Costa Rica",
            "email": "kennethb@thehangar.cr",
            "homepage": "http://thehangar.cr"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packagist.drupal-composer.org"
        }
    ],
    "require": {
        "php": ">=5.6",
        "composer/installers": "1.*",
        "drupal/views": "7.*",
        "drupal/taxonomy": "7.*",
        "drupal/ctools": "7.*",
        "drupal/token": "7.*",
        "drupal/entity": "7.*",
        "drupal/pathauto": "7.*"
    },
    "extra": {
        "installer-paths": {
            "public/sites/all/modules/contrib/{$name}/": ["type:drupal-module"],
            "public/sites/all/themes/{$name}/": ["type:drupal-theme"],
            "public/sites/all/libraries/{$name}/":["type:drupal-library"]
        }
    }
}